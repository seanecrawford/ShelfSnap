#!/usr/bin/env sh

##############################################################################
# This script was automatically generated by the Android build tools.
#
# It can be used to run the Gradle wrapper with the bundled Gradle
# distribution. This file should be kept in version control.
##############################################################################

BASEDIR=$(dirname "$0")
GRADLE_WRAPPER_JAR="$BASEDIR/gradle/wrapper/gradle-wrapper.jar"
if [ ! -f "$GRADLE_WRAPPER_JAR" ]; then
  echo "ERROR: Missing Gradle wrapper JAR: $GRADLE_WRAPPER_JAR" >&2
  echo "You may need to run 'gradle wrapper' to generate it." >&2
  exit 1
fi

exec java -jar "$GRADLE_WRAPPER_JAR" "$@"